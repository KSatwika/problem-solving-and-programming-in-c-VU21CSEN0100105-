#include <stdio.h>
int sum1(int *i,int *j){
    printf("%d is the sum of %d and %d",*i+*j,*i,*j);
}
int sum2(int k,int l){
    printf("%d is the sum of %d and %d",k+1,k,l);
}
int main(){
    int a=10,b=20;
    sum1(&a,&b);
    printf("\n\n");
    sum2(a,b);
}
output
30 is the sum of 10 and 20

11 is the sum of 10 and 20
